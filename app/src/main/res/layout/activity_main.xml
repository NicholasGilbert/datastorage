<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/count_textview"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="#8A8585"
        android:gravity="center"
        android:text="@string/_0"
        android:textColor="#ffffff"
        android:textSize="112sp" />

    <Button
        android:id="@+id/black_background_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="500dp"
        android:background="@android:color/black"
        android:onClick="changeBackground"
        android:text="@string/black"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/red_background_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="500dp"
        android:layout_toEndOf="@+id/black_background_button"
        android:background="@color/red_background"
        android:onClick="changeBackground"
        android:text="@string/red"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/blue_background_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/green_background_button"
        android:background="@color/blue_background"
        android:onClick="changeBackground"
        android:text="@string/blue"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/green_background_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="14dp"
        android:background="@color/green_background"
        android:onClick="changeBackground"
        android:text="@string/green"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="600dp"
        android:onClick="countUp"
        android:text="@string/count" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="90dp"
        android:onClick="reset"
        android:text="@string/reset" />

</RelativeLayout>